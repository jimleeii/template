{
    "$schema": "http://json.schemastore.org/template",
    "author": "Wei Li",
    "classifications": [ "Web/MinimalAPI/Web MinimalAPI/MinimalAPI/Service" ],
    "identity": "Template",
    "name": "ASP.NET Core MinimalAPI",
    "description": "A template that contains all minimal API structure.",
    "shortName": "my-minimalapi",
    "sourceName":"Template",
    "tags": {
      "language": "C#",
      "type": "project"
    },
    "preferNameDirectory": true,
    "symbols": {
        "Framework": {
            "type": "parameter",
            "description": "The target framework for the project.",
            "datatype": "choice",
            "choices": [
                {
                    "choice": "net6.0"
                },
                {
                    "choice": "net7.0"
                },
                {
                    "choice": "net8.0"
                }
            ],
            "defaultValue": "net8.0",
            "replaces": "{TargetFramework}"
        }
    }
  }